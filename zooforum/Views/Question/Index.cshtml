@model zooforum.Models.QuestionViewModel

@{
    ViewData["Title"] = "Question Page";
}

<h2>Question Page</h2>

<div>
    <h4>Create a New Question</h4>
    <hr />
    @using (Html.BeginForm("CreateQuestion", "Question", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Title, "Question Title")
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Content, "Question Content")
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    }
</div>







