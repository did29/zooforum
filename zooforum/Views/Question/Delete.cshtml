@if (User.IsInRole("Admin"))
@model IEnumerable<zooforum.Models.QuestionViewModel>
@{
    ViewData["Title"] = "Delete Question";
}

<h2>Delete Question</h2>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Question", new { id = Model.Id }, FormMethod.Post))
{
    <div class="form-group">
        <p>Are you sure you want to delete this question?</p>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
}